@model OnlineShop.ProductService.Products

@Html.AntiForgeryToken()
<div class="form-group">
    <div >
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" , placeholder = "Название товара" } })
    </div>
</div>
<div class="form-group">
    <div >
        @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Цена" } })
    </div>
</div>
<div class="form-group">
    <div>
        @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Описание" } })
    </div>
</div>

<label>Изображение:</label>
<input type="file" name="upload" /><br />
<input type="submit" class="btn btn-default" value="Сохранить" /> | @Html.ActionLink("Отмена", "index")
