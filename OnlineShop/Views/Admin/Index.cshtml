@model OnlineShop.ProductService.Products[]
@{
    ViewBag.Title = "Система управления сайтом";
}

<a class="btn btn-warning navbar-btn" href="~/Account/Logout">Logout</a>

<p>
    @Html.ActionLink("Добавить новый товар", "Create")
</p>
<br />

<table class="table table-striped">
    <tr>
        <th>Название</th>
        <th>Цена, руб.</th>
        <th></th>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => p.Name)</td>
            <td>@Html.DisplayFor(model => p.Price)</td>
            <td>
                <a href="@Url.Action("Edit", "Admin", new { id = p.Id })">Редактировать</a> |
                <a href="@Url.Action("Delete", "Admin", new { id = p.Id })">Удалить</a>
            </td>
        </tr>
    }
</table>
