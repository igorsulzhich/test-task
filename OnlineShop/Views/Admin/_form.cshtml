@model OnlineShop.ProductService.Products

@Html.AntiForgeryToken()
<div class="form-group">
    <div >
        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" , placeholder = "Название товара", required = true } })
    </div>
</div>
<div class="form-group">
    <div >
        @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Цена", type="number", required = true } })
    </div>
</div>
<div class="form-group">
    <div>
        @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Описание", required = true } })
    </div>
</div>
<label>Изображение:</label>
